{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Nutshell Help",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "appearance": {
    "default": "dark"
  },
  "modeToggle": {
    "default": "dark",
    "isHidden": true
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "introduction",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Essentials",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/settings",
              "essentials/navigation",
              "essentials/reusable-snippets"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Feedback",
          "href": "https://withnutshell.canny.io/feature-requests",
          "icon": "book-open-cover",
          "color": {
            "light": "#a364d3",
            "dark": "#a364d3"
          }
        },
        {
          "anchor": "Roadmap",
          "href": "https://withnutshell.canny.io/",
          "icon": "rocket-launch",
          "color": {
            "light": "#a364d3",
            "dark": "#a364d3"
          }
        },
        {
          "anchor": "Blog",
          "href": "https://withnutshell.com/blog",
          "icon": "newspaper",
          "color": {
            "light": "#a364d3",
            "dark": "#a364d3"
          }
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@withnutshell.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Main site",
      "href": "https://withnutshell.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/nutshell_ai",
      "linkedin": "https://www.linkedin.com/company/nutshellai"
    }
  }
}